<resources>

    <!-- 项目的主题 -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorTheme</item>
        <item name="colorPrimaryDark">@color/colorTheme</item>
        <item name="colorAccent">@color/colorNavActive</item>
        <item name="android:statusBarColor">@color/colorTheme</item>
        <!-- 设置应用内部统一的界面背景色 -->
        <item name="android:windowBackground">@color/colorTheme</item>
        <!-- 设置状态栏文本颜色 -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

</resources>
