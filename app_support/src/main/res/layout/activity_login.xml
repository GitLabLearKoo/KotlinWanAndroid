<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_dialog"
    android:orientation="vertical">

    <my.itgungnir.ui.head_bar.HeadBar
        android:id="@+id/headBar"
        style="@style/HeadBarStyle"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <my.itgungnir.ui.input.TextInput
        android:id="@+id/userNameInput"
        style="@style/TextInputStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:ti_hint="@string/str_username_hint" />

    <my.itgungnir.ui.input.PasswordInput
        android:id="@+id/passwordInput"
        style="@style/PasswordInputStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:pi_hint="@string/str_password_hint" />

    <my.itgungnir.ui.input.ProgressButton
        android:id="@+id/login"
        style="@style/ProgressButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginStart="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/toRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:paddingEnd="20dp"
        android:paddingBottom="5dp"
        android:text="@string/str_register"
        android:textColor="@color/text_color_level_2"
        android:textSize="@dimen/text_size_small" />

</LinearLayout>